            <Button Name="cassetta_pausa" Click="cassetta_pausa_Click" Content="PAUSE" Width="90" Height="40" Background="#C41E3A" Foreground="Black" BorderBrush="Black" BorderThickness="2" Margin="-60 -40 0 0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Cursor="Hand" FontSize="15"></Button>
            <Button Name="cassetta_riprendi" Click="cassetta_riprendi_Click" Content="RESUME" Width="90" Height="40" Background="#C41E3A" Foreground="Black" BorderBrush="Black" BorderThickness="2" Margin="135 -40 0 0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Cursor="Hand" FontSize="15"></Button>
            <Button Name="casssetta_successiva" Click="casssetta_successiva_Click" Content="NEXT" Width="90" Height="40" Background="#C41E3A" Foreground="Black" BorderBrush="Black" BorderThickness="2" Margin="325 -40 0 0" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Cursor="Hand" FontSize="15"></Button>
            <Slider Name="metraggio_cassetta" ValueChanged="metraggio_cassetta_ValueChanged" Thumb.DragStarted="metraggio_cassetta_DragStarted" Thumb.DragCompleted="metraggio_cassetta_DragCompleted" Width="500" Height="30" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="20 70 0 0" Background="Black"></Slider>
            <TextBox Name="tempo_cassetta" HorizontalAlignment="Left" Width="200" Height="30" Background="Black" Foreground="#C41E3A" BorderBrush="Transparent" BorderThickness="0" Margin="-160 66 0 0" IsReadOnly="True" TextAlignment="Center" FontSize="17"></TextBox>
